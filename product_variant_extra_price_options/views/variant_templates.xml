<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="variants" inherit_id="sale.variants">
        <xpath expr="//select//span[starts-with(@t-if, 'combination_info_variant[')]" position="after">
            <span t-if="ptav.price_multiply_extra and ptav.price_multiply_extra != 1" class="badge badge-pill badge-success">
                <t t-esc="'(x'" />
                <span t-field="ptav.price_multiply_extra" class="variant_price_extra" style="white-space: nowrap;"/>
                <t t-esc="')'" />
            </span>
        </xpath>
    </template>
</odoo>
